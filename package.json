{
	"name": "mwc3-back-helpers",
	"description": "Small set of modules to help building tools around MWC framework.",
	"version": "0.0.1",
	"type": "module",
	"main": "./lib/index.js",
	"module": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"exports": {
		".": {
			"import": "./lib/index.js",
			"default": "./lib/index.js",
			"types": "./lib/index.d.ts"
		}
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@material/web": "^1.1.1",
		"typescript": "^5.3.3",
		"wireit": "^0.14.3"
	},
	"scripts": {
		"build": "wireit",
		"prepublishOnly": "changeset version"
	},
	"wireit": {
		"build": "tsc --pretty",
		"clean": "if-file-deleted",
		"files": [
			"tsconfig.json",
			"src"
		],
		"output": [
			"lib"
		]
	},
	"files": [
		"/lib",
		"!/lib/test"
	]
}
