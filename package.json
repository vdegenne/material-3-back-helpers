{
	"name": "mwc3-back-helpers",
	"description": "Small set of modules to help building tools around MWC framework.",
	"version": "0.0.2",
	"type": "module",
	"main": "./lib/index.js",
	"module": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"exports": {
		".": {
			"import": "./lib/index.js",
			"default": "./lib/index.js",
			"types": "./lib/index.d.ts"
		},
		"./md-elements.js": {
			"import": "./lib/md-elements.js",
			"default": "./lib/md-elements.js",
			"types": "./lib/md-elements.d.ts"
		},
		"./md-icons.js": {
			"import": "./lib/md-icons.js",
			"default": "./lib/md-icons.js",
			"types": "./lib/md-icons.d.ts"
		},
		"./fonts.js": {
			"import": "./lib/fonts.js",
			"default": "./lib/fonts.js",
			"types": "./lib/fonts.d.ts"
		}
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@material/web": "^1.1.1",
		"@types/chai": "^4.3.11",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.11.0",
		"chai": "^5.0.0",
		"mocha": "^10.2.0",
		"tsx": "^4.7.0",
		"typescript": "^5.3.3",
		"wireit": "^0.14.3"
	},
	"scripts": {
		"build": "wireit",
		"build:imports-map": "wireit",
		"build:codepoint-docs": "wireit",
		"test": "wireit",
		"prepublishOnly": "changeset version"
	},
	"wireit": {
		"build": {
			"dependencies": [
				"build:ts"
			]
		},
		"build:ts": {
			"command": "tsc --pretty",
			"dependencies": [
				"build:codepoint-docs",
				"build:imports-map"
			],
			"clean": "if-file-deleted",
			"files": [
				"tsconfig.json",
				"src"
			],
			"output": [
				"lib"
			]
		},
		"build:imports-map": {
			"command": "node --import tsx/esm ./scripts/generate-imports-map.ts",
			"files": [
				"./scripts/generate-imports-map.js"
			],
			"output": [
				"./src/md-elements-imports-map.ts"
			]
		},
		"build:codepoint-docs": {
			"command": "node --import tsx/esm ./scripts/generate-codepoint-docs.ts",
			"files": [
				"./scripts/generate-codepoint-docs.ts"
			],
			"output": [
				".mdicon"
			]
		},
		"test": {
			"command": "mocha lib/test/**/*_test.js",
			"dependencies": [
				"build"
			]
		}
	},
	"files": [
		"/lib",
		"!/lib/test"
	]
}
